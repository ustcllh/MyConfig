" uncomment to enable mouse in all mode
" set mouse=a

" necessary for gnu screen & mouse
set ttymouse=xterm2

" syntax highlighting
syntax on

" choice of color scheme
colorscheme desert

" set line numbers
set nu

" set auto indent
set autoindent
set tabstop=2
set softtabstop=0 noexpandtab

" set highlight search
set hlsearch
